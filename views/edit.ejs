                <label>Disaster Name</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>" required>
            </div>
            <div class="field">
                <label>Details</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>" required>
            </div>
            <div class="field">
                <label>Plan Content</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
    </div>
